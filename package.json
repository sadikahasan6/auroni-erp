{
  "name": "auroni-erp",
  "module": "index.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "dev": "run-p dev:frontend dev:backend",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:sequential": "bun run dev:frontend & bun run dev:backend",
    "install": "cd frontend && bun install & cd backend && bun install"
  },
  "type": "module"
}