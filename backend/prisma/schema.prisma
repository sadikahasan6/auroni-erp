generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  employeeCount String // e.g., "1-10", "11-50", "51-200", "200+"
  businessType  String // e.g., "retail", "tech", "manufacturing", "services", "other"
  updatedAt DateTime @updatedAt
}
